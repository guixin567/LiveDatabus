<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".livedatabus1.VersionFirstActivity">
    <Button
            android:text="LiveDataBus源码解析"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/bt_source" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bt_version1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="LiveDataBus版本一"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:id="@+id/bt_version1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_source"
            app:layout_constraintBottom_toTopOf="@+id/bt_version2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="LiveDataBus版本二"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_version2"
            app:layout_constraintTop_toBottomOf="@+id/bt_version1"
            app:layout_constraintBottom_toTopOf="@+id/bt_version3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>
    <Button
            android:text="LiveDataBus版本三"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/bt_version3"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/bt_version2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"/>
</android.support.constraint.ConstraintLayout>